---
import config from "@/config/global";
import { plainify } from "@/lib/utils/textConverter";
import Footer from "@/layouts/components/Footer.astro";
import Header from "@/layouts/components/Navbar.astro";
import "@/styles/main.css";
import {
  GoogleTagmanager,
  GoogleTagmanagerNoscript,
} from "@digi4care/astro-google-tagmanager";
import { AstroFont } from "astro-font";
import { ClientRouter, ViewTransitions } from "astro:transitions";
import TwSizeIndicator from "./components/TwSizeIndicator.astro";
import Topline from "./components/Topline.astro";

// font families
const pf = config.fonts.font_family.primary;
const sf = config.fonts.font_family.secondary;

let fontPrimary, fontSecondary;
if (config.fonts.font_family.primary) {
  fontPrimary = config.fonts.font_family.primary
    .replace(/\+/g, " ")
    .replace(/:[ital,]*[ital@]*[wght@]*[0-9,;.]+/gi, "");
}
if (config.fonts.font_family.secondary) {
  fontSecondary = config.fonts.font_family.secondary
    .replace(/\+/g, " ")
    .replace(/:[ital,]*[ital@]*[wght@]*[0-9,;.]+/gi, "");
}

// types for frontmatters
export interface Props {
  title?: string;
  meta_title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  canonical?: string;
}

// destructure frontmatter
const { title, meta_title, description, image, noindex, canonical } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ViewTransitions />
    <!-- google tag manager -->
    <GoogleTagmanager id={config.googleTagManagerId} />
    <!-- favicon -->
    <link rel="shortcut icon" href={config.logo.primary} />
    <!-- theme meta -->
    <meta name="msapplication-TileColor" content="#000000" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content="#fff"
    />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="#000"
    />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <!-- google font css -->
    <AstroFont
      config={[
        {
          src: [],
          preload: false,
          display: "swap",
          name: fontPrimary!,
          fallback: "sans-serif",
          cssVariable: "font-primary",
          googleFontsURL: `https://fonts.googleapis.com/css2?family=${pf}&display=swap`,
        },
        {
          src: [],
          preload: false,
          display: "swap",
          name: fontSecondary!,
          fallback: "sans-serif",
          cssVariable: "font-secondary",
          googleFontsURL: `https://fonts.googleapis.com/css2?family=${sf}&display=swap`,
        },
      ]}
    />

    <!-- responsive meta -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5"
    />

    <!-- title -->
    <title>
      {
        plainify(
          meta_title ? meta_title : title ? title : config.seo.defaultTitle,
        )
      }
    </title>

    <!-- canonical url -->
    {canonical && <link rel="canonical" href={canonical} item-prop="url" />}

    <!-- noindex robots -->
    {noindex && <meta name="robots" content="noindex,nofollow" />}

    <!-- meta-description -->
    <meta
      name="description"
      content={plainify(description ? description : config.seo.description)}
    />

    <ClientRouter />

    <!-- author from config.json -->
    <meta name="author" content={config.businessName} />

    <!-- og-title -->
    <meta
      property="og:title"
      content={plainify(
        meta_title ? meta_title : title ? title : config.seo.defaultTitle,
      )}
    />

    <!-- og-description -->
    <meta
      property="og:description"
      content={plainify(description ? description : config.seo.description)}
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={`${config.seo.siteUrl}/${Astro.url.pathname.replace("/", "")}`}
    />

    <!-- twitter-title -->
    <meta
      name="twitter:title"
      content={plainify(
        meta_title ? meta_title : title ? title : config.seo.defaultTitle,
      )}
    />

    <!-- twitter-description -->
    <meta
      name="twitter:description"
      content={plainify(description ? description : config.seo.description)}
    />

    <!-- og-image -->
    <meta
      property="og:image"
      content={`${config.seo.siteUrl}${image ? image : config.seo.metaImage}`}
    />

    <!-- twitter-image -->
    <meta
      name="twitter:image"
      content={`${config.seo.siteUrl}${image ? image : config.seo.metaImage}`}
    />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <GoogleTagmanagerNoscript id={config.googleTagManagerId} />

    <TwSizeIndicator />
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
