---
import ImageMod from "./ImageMod.astro";
import config from "@/config/global";
import Logo from "./Logo.astro";
import { readablePhoneNumber } from "@/lib/utils/textConverter";
// Footer Component

const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { name: "Преглед и лечение", href: "#services" },
    { name: "Ваксинация", href: "#services" },
    { name: "Обезпаразитяване", href: "#services" },
    { name: "Микрочипиране", href: "#services" },
    { name: "Домашни Посещения", href: "#services" },
  ],
  quickLinks: [
    { name: "Услуги", href: "#services" },
    { name: "За мен", href: "#aboutme" },
    { name: "Кабинетът", href: "#cabinet" },
    { name: "Контакти", href: "#contact" },
  ],
  social: [
    { name: "Facebook", href: "#", icon: "facebook" },
    { name: "Instagram", href: "#", icon: "instagram" },
  ],
};

const { businessName, phone, email, address, workingHours } = config;
---

<footer class="relative overflow-hidden bg-gray-900 text-gray-300">
  <!-- Decorative paw prints -->
  <div class="absolute top-8 right-12 opacity-5">
    <ImageMod src="/images/paw.svg" alt="" width={80} height={80} />
  </div>
  <div class="absolute bottom-12 left-16 opacity-5">
    <ImageMod src="/images/paw.svg" alt="" width={60} height={60} />
  </div>

  <div class="container mx-auto px-6 py-12 sm:px-8 lg:px-12">
    <!-- Main Footer Content -->
    <div class="mb-12 grid grid-cols-1 gap-10 md:grid-cols-2 lg:grid-cols-4">
      <!-- About Section -->
      <div class="space-y-4">
        <Logo showName={true} />
        <p class="text-sm leading-relaxed text-gray-400 sm:text-base">
          Професионална грижа за вашите любимци с над 10 години опит в
          ветеринарната медицина.
        </p>
        <!-- Social Links -->
        <div class="flex flex-wrap gap-4 pt-2">
          <a
            href="#"
            class="hover:text-primary transition-colors"
            aria-label="Facebook"
          >
            <svg
              class="h-8 w-8 md:h-6 md:w-6"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="#"
            class="hover:text-primary transition-colors"
            aria-label="Instagram"
          >
            <svg
              class="h-8 w-8 md:h-6 md:w-6"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-secondary mb-4 text-lg font-semibold">Услуги</h4>
        <ul class="space-y-2">
          {
            footerLinks.services.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary text-sm transition-colors sm:text-base"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-secondary mb-4 text-lg font-semibold">Бързи Връзки</h4>
        <ul class="space-y-2">
          {
            footerLinks.quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-primary text-sm transition-colors sm:text-base"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-secondary mb-4 text-lg font-semibold">Контакти</h4>
        <ul class="space-y-3 text-sm sm:text-base">
          <li class="flex items-start gap-2">
            <svg
              class="text-primary mt-0.5 h-5 w-5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="break-words">{address}</span>
          </li>
          <li class="flex items-center gap-2">
            <svg
              class="text-primary h-5 w-5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <a
              href={`tel:${phone}`}
              class="hover:text-primary transition-colors"
            >
              {readablePhoneNumber(phone)}
            </a>
          </li>
          <li class="flex items-start gap-2">
            <svg
              class="text-primary mt-0.5 h-5 w-5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>{workingHours}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-8 border-t border-gray-800 pt-6">
      <div
        class="flex flex-col items-center justify-between gap-3 text-xs sm:text-base md:flex-row md:gap-6"
      >
        <p>© {currentYear} {businessName}. Всички права запазени.</p>
        <p>
          Разработено с ❤️ от <a href="https://052digital.com">052digital</a>
        </p>
      </div>
    </div>
  </div>
</footer>
